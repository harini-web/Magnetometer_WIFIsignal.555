<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/cardStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:elevation="6dp">

        <TextView
            android:id="@+id/tvMainStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SYSTEM READY"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvSubStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select mode to begin"
            android:textColor="#E8F5E9"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="4dp">
        <com.example.magnetometerwifisignal.SimpleGraphView
            android:id="@+id/graphView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="12dp"
        android:alignmentMode="alignMargins">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:orientation="vertical"
            android:background="#FFFFFF" android:elevation="2dp"
            android:padding="12dp" android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAGNETIC"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tvMag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ÂµT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:orientation="vertical"
            android:background="#FFFFFF" android:elevation="2dp"
            android:padding="12dp" android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SONAR / DOPPLER"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tvSonar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:orientation="vertical"
            android:background="#FFFFFF" android:elevation="2dp"
            android:padding="12dp" android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tvWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 dBm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_columnWeight="1" android:orientation="vertical"
            android:background="#FFFFFF" android:elevation="2dp"
            android:padding="12dp" android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIGHT"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tvLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 lx"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Start"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:backgroundTint="#F44336"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <Switch
            android:id="@+id/swPersonMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enable Person Detection (Beta)"
            android:textSize="14sp"
            android:checked="false"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:text="> Ready."
        android:fontFamily="monospace"
        android:textSize="11sp"/>
</LinearLayout>